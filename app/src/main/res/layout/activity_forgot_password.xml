<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2D2C42"
    android:orientation="vertical">

    <EditText
        android:id="@+id/id_email_forgot"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:paddingLeft="16dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/id_send_button_forgot"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/rounded_button"
        android:text="Send"
        app:layout_constraintEnd_toEndOf="@+id/id_email_forgot"
        app:layout_constraintStart_toStartOf="@+id/id_email_forgot"
        app:layout_constraintTop_toBottomOf="@+id/id_email_forgot" />

    <TextView
        android:id="@+id/id_login_button_forgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Log In"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/id_send_button_forgot"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/id_send_button_forgot"
        app:layout_constraintTop_toBottomOf="@+id/id_send_button_forgot" />
</androidx.constraintlayout.widget.ConstraintLayout>